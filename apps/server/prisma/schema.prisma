// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}


model Role {
  id       String    @id @default(uuid())
  roleType String
  roleCode String
  teachers Teacher[]
}

model Year {
  id        String @id @default(uuid())
  yearGroup String
  teachers Teacher[]
}

model Class {
  id        String @id @default(uuid())
  className String
  teachers Teacher[]
}

model Session {
  id          String @id @default(uuid())
  sessionType String
}

model Teacher {
  id               String   @id @default(uuid())
  teacherFirstName String
  teacherLastName  String
  FTE              String
  role             Role?    @relation(fields: [roleId], references: [id])
  year             Year?    @relation(fields: [yearId], references: [id])
  class            Class?   @relation(fields: [classroomId], references: [id])
  roleId           String?
  yearId           String?
  classroomId      String?
  Monday           Boolean
  Tuesday          Boolean
  Wednesday         Boolean
  Thursday          Boolean
  Friday          Boolean
}


